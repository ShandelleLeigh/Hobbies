<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <header>
      <% include ./partials/navbar %>
    </header>
    <h1 class='center'>My Games</h1>
    <hr />
    <div class='row'>
      <div class='col s12 m4'>
        <h3>Add Game</h3>
        <form action='/games' method='post'>
          <input type='text' name='title' placeholder='Title' />
          <button class='btn btn-waves' type='submit'>Add</button>
        </form>
      </div>
      <table class='table col m8 s12'>
        <thead>
          <th>Title</th>
          <th>Edit</th>
          <th>x</th>
        </thead>
        <tbody>
          <% games.forEach( function(games) { %>
            <% var url = "/games/" + games.id + "?_method=DELETE" %>
            <% var editUrl = "/games/" + games.id + "/edit" %>
            <tr>
              <td><%= games.title %></td>
              <td>
                <a class="btn" href=<%= editUrl %>>Edit</a>
              </td>
              <td>
                <form method="POST" action=<%= url %> >
                  <button class="btn red">Delete</button>
                </form>
              </td>
          <% }); %>
        </tbody>
     </table>
   </body>
</html>
